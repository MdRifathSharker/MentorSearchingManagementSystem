<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/mentoreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentoree"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/purple" />

        <ImageButton
            android:id="@+id/HomeNotificationButton"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/baseline_circle_notifications_24"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:adjustViewBounds="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Add your content here -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/HomeHomeButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/HomeMyMentorsButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/mentor_icon"
            android:contentDescription="My Mentors"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/HomeMyPostButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/baseline_text_snippet_24"
            android:contentDescription="My Post"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/HomeSearchBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Search"
            android:src="@drawable/search"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/HomeLogOutButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Log Out Icon"
            android:src="@drawable/baseline_logout_24"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/HomeProfilePictureButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/circle_shape"
            android:contentDescription="Profile"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/profilephoto" />


        />
    </LinearLayout>
</RelativeLayout>
