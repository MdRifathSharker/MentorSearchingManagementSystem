<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/lightBackground"
    tools:context=".PostPage">

    <!-- Post input area with CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_post_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:elevation="6dp"
        android:padding="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <!-- Add Image Button (icon) -->
                <ImageButton
                    android:id="@+id/add_image_button"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Add Image"
                    android:src="@drawable/baseline_add_24"
                    android:tint="@color/purple" />

                <!-- Post Button -->
                <Button
                    android:id="@+id/post_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/purple"
                    android:elevation="4dp"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="6dp"
                    android:text="Post"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <!-- Post Text Input -->

            <EditText
                android:id="@+id/post_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:gravity="top"
                android:hint="Share your thoughts..."
                android:maxLines="8"
                android:minLines="2"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Add Image Button and Post Button -->


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Image preview with rounded corners -->
    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/card_post_input"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:layout_marginTop="5dp" />

    <!-- RecyclerView for displaying posts -->

    <!-- Floating Action Button for Creating Post -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posts_recyclerview"
        android:layout_width="395dp"
        android:layout_height="557dp"
        android:layout_alignTop="@+id/card_post_input"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="137dp"

        android:layout_marginBottom="5dp"
        android:clipToPadding="false"
        android:paddingBottom="10dp"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:contentDescription="Create Post"
        android:tint="@android:color/white"
        android:backgroundTint="@color/purple"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:elevation="6dp"/>

</RelativeLayout>
